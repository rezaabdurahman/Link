# Production Environment Configuration
VITE_APP_MODE=production
VITE_REQUIRE_AUTH=true
VITE_AUTO_LOGIN=false
VITE_MOCK_USER=false
VITE_SHOW_DEMO_BANNER=false
VITE_SEED_DEMO_DATA=false

# Disable mocking for production (use real backend services)
VITE_ENABLE_MOCKING=false

# API Configuration - Update these with your actual production URLs
VITE_API_BASE_URL=https://api.link-app.com
# Note: With mocking disabled, API calls will go to real backend services

# Error Reporting - Update with your actual Sentry DSN
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_APP_VERSION=1.0.0

# iOS App Store specific settings
VITE_APP_STORE_URL=https://apps.apple.com/app/link/id[YOUR_APP_ID]
VITE_SUPPORT_EMAIL=support@link-app.com
VITE_PRIVACY_POLICY_URL=https://link-app.com/privacy
VITE_TERMS_URL=https://link-app.com/terms
