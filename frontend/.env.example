# Environment Configuration
# Copy this file to .env.local for development
# Update values according to your environment (development/staging/production)

# Application Mode - determines overall app behavior
VITE_APP_MODE=development

# Authentication Configuration
VITE_REQUIRE_AUTH=true
VITE_AUTO_LOGIN=false
VITE_MOCK_USER=false

# Development Features
VITE_SHOW_DEMO_BANNER=true
VITE_SEED_DEMO_DATA=true

# Mock Service Worker - Enable for development/testing
VITE_ENABLE_MOCKING=true

# API Configuration
# Development: http://localhost:8080 or your local API gateway
# Production: https://api.link-app.com
VITE_API_BASE_URL=http://localhost:8080

# Error Reporting - Sentry Configuration
# Get your DSN from https://sentry.io/settings/projects/
VITE_SENTRY_DSN=https://your-project-dsn@o000000.ingest.sentry.io/0000000
VITE_SENTRY_ENVIRONMENT=development
VITE_APP_VERSION=1.0.0

# Observability and Analytics
VITE_ENABLE_PERFORMANCE_TRACKING=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_USER_JOURNEY_TRACKING=false

# Optional: Custom Metrics Export (leave empty for development)
# VITE_METRICS_EXPORT_URL=https://metrics.linkapp.com/api/v1/write
# VITE_METRICS_EXPORT_INTERVAL=30000

# App Store and Legal Links (update for production)
VITE_APP_STORE_URL=https://apps.apple.com/app/link/id[YOUR_APP_ID]
VITE_SUPPORT_EMAIL=support@link-app.com
VITE_PRIVACY_POLICY_URL=https://link-app.com/privacy
VITE_TERMS_URL=https://link-app.com/terms

# Development Only - Remove for production
# VITE_DEBUG_MODE=true
# VITE_MOCK_DELAY_MS=1000