# Staging Environment Configuration
# Used for staging/preview deployments before production

# Application Mode
VITE_APP_MODE=staging

# Authentication
VITE_REQUIRE_AUTH=true
VITE_AUTO_LOGIN=false
VITE_MOCK_USER=false

# Development Features (limited for staging)
VITE_SHOW_DEMO_BANNER=true
VITE_SEED_DEMO_DATA=false

# Disable mocking for staging (use real backend services)
VITE_ENABLE_MOCKING=false

# Staging API Configuration
VITE_API_BASE_URL=https://staging-api.link-app.com

# Error Reporting - Use staging Sentry project
VITE_SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/staging-project-id
VITE_SENTRY_ENVIRONMENT=staging
VITE_APP_VERSION=1.0.0-staging

# Observability Configuration (enabled for testing)
VITE_ENABLE_PERFORMANCE_TRACKING=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_USER_JOURNEY_TRACKING=true

# Optional: Export metrics to staging collector
# VITE_METRICS_EXPORT_URL=https://staging-metrics.linkapp.com/api/v1/write
# VITE_METRICS_EXPORT_INTERVAL=30000

# App Store and Legal Links (staging versions)
VITE_APP_STORE_URL=https://testflight.apple.com/join/[TESTFLIGHT_CODE]
VITE_SUPPORT_EMAIL=staging-support@link-app.com
VITE_PRIVACY_POLICY_URL=https://staging.link-app.com/privacy
VITE_TERMS_URL=https://staging.link-app.com/terms

# Staging-specific debug features
VITE_DEBUG_MODE=false