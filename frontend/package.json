{
  "name": "link-ios-frontend",
  "version": "0.1.0",
  "private": true,
  "description": "Link iOS Frontend Mockup - connect with people around you",
  "scripts": {
    "start": "vite --open",
    "dev": "vite --open",
    "build": "tsc && vite build",
    "build:demo": "vite build --mode demo",
    "build:preview": "tsc && vite build --mode preview",
    "build:production": "tsc && vite build --mode production",
    "dev:demo": "vite --mode demo",
    "dev:preview": "vite --mode preview",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 200",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:enforce": "jest --coverage --coverageReporters=text-lcov --coverageReporters=text --passWithNoTests",
    "test:coverage:ci": "jest --coverage --watchAll=false --ci --passWithNoTests",
    "test:onboarding": "jest src/components/onboarding/__tests__ --verbose",
    "test:snapshots": "jest --updateSnapshot",
    "test:env": "node -e \"require('dotenv').config({path:'.env.test'}); console.log('âœ… .env.test loaded with', Object.keys(process.env).filter(k=>k.startsWith('VITE_')||k==='NODE_ENV').length, 'variables'); process.exit(0)\"",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:headless": "cypress run --headless",
    "test:e2e": "cypress run --headless",
    "test:e2e:dev": "cypress open",
    "test:visual": "percy exec -- cypress run --headless",
    "test:visual:dev": "percy exec -- cypress open",
    "test:visual:ci": "percy exec --quiet -- cypress run --headless --env percy=true",
    "audit:contrast": "node scripts/contrast-audit.js",
    "audit:a11y": "npm run lint",
    "audit:full": "npm run audit:contrast && npm run audit:a11y",
    "postinstall": "msw init public --save"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "cross-fetch": "^4.1.0",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.62.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.8.0",
    "swr": "^2.3.6",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@mswjs/interceptors": "^0.39.6",
    "@percy/cli": "^1.31.1",
    "@percy/cypress": "^3.1.6",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.3",
    "babel-plugin-transform-import-meta": "^2.3.3",
    "cypress": "^14.5.4",
    "dotenv": "^17.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mock-socket": "^9.3.1",
    "msw": "^2.10.5",
    "postcss": "^8.5.6",
    "tailwind-scrollbar-hide": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^5.4.19"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
