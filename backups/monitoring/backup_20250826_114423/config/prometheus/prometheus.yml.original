global:
  scrape_interval: 15s
  evaluation_interval: 15s
  external_labels:
    monitor: 'link-monitor'

# Alertmanager configuration
alerting:
  alertmanagers:
    - static_configs:
        - targets:
          - alertmanager:9093

# Load rules once and periodically evaluate them according to the global 'evaluation_interval'.
rule_files:
  - "/etc/prometheus/rules/*.yml"

scrape_configs:
  # Prometheus itself
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  # CloudNativePG PostgreSQL Cluster
  - job_name: 'postgres-cluster'
    kubernetes_sd_configs:
    - role: pod
      namespaces:
        names:
        - link-services
    relabel_configs:
    - source_labels: [__meta_kubernetes_pod_label_postgresql_cnpg_io_cluster]
      action: keep
      regex: postgres-cluster
    - source_labels: [__meta_kubernetes_pod_container_port_number]
      action: keep
      regex: 9187
    - source_labels: [__meta_kubernetes_pod_name]
      target_label: pod
    - source_labels: [__meta_kubernetes_pod_label_postgresql_cnpg_io_instanceRole]
      target_label: role
    - source_labels: [__meta_kubernetes_pod_label_postgresql_cnpg_io_cluster]
      target_label: cluster
    scrape_interval: 15s
    metrics_path: /metrics

  # CloudNativePG Operator
  - job_name: 'cnpg-operator'
    kubernetes_sd_configs:
    - role: service
      namespaces:
        names:
        - cnpg-system
    relabel_configs:
    - source_labels: [__meta_kubernetes_service_name]
      action: keep
      regex: cnpg-controller-manager-metrics-service
    scrape_interval: 30s
    metrics_path: /metrics

  # PgBouncer Connection Pooler
  - job_name: 'pgbouncer'
    kubernetes_sd_configs:
    - role: service
      namespaces:
        names:
        - link-services
    relabel_configs:
    - source_labels: [__meta_kubernetes_service_name]
      action: keep
      regex: pgbouncer-service
    - source_labels: [__meta_kubernetes_service_port_name]
      action: keep
      regex: metrics
    scrape_interval: 30s
    metrics_path: /metrics

  # API Gateway
  - job_name: 'api-gateway'
    static_configs:
      - targets: ['api-gateway:8080']
    metrics_path: '/metrics'
    scrape_interval: 15s
    scrape_timeout: 10s

  # Backend Services
  - job_name: 'user-service'
    static_configs:
      - targets: ['user-svc:8080']
    metrics_path: '/metrics'
    scrape_interval: 15s

  - job_name: 'chat-service'
    static_configs:
      - targets: ['chat-svc:8080']
    metrics_path: '/metrics'
    scrape_interval: 15s

  - job_name: 'ai-service'
    static_configs:
      - targets: ['ai-svc:8000']
    metrics_path: '/metrics'
    scrape_interval: 30s
    scrape_timeout: 15s

  - job_name: 'discovery-service'
    static_configs:
      - targets: ['discovery-svc:8080']
    metrics_path: '/metrics'
    scrape_interval: 15s

  - job_name: 'search-service'
    static_configs:
      - targets: ['search-svc:8080']
    metrics_path: '/metrics'
    scrape_interval: 15s

  # Infrastructure Services
  - job_name: 'postgres'
    static_configs:
      - targets: ['postgres-exporter:9187']
    scrape_interval: 30s

  - job_name: 'redis'
    static_configs:
      - targets: ['redis-exporter:9121']
    scrape_interval: 30s

  # System Metrics
  - job_name: 'node-exporter'
    static_configs:
      - targets: ['node-exporter:9100']
    scrape_interval: 15s

  - job_name: 'cadvisor'
    static_configs:
      - targets: ['cadvisor:8080']
    scrape_interval: 15s

  # Uptime Monitoring
  - job_name: 'blackbox-http'
    metrics_path: /probe
    params:
      module: [http_2xx]
    static_configs:
      - targets:
        - http://api-gateway:8080/health
        - http://user-svc:8080/health
        - http://chat-svc:8080/health
        - http://discovery-svc:8080/health
        - http://search-svc:8080/health
        - http://frontend:3000
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: blackbox-exporter:9115

  # Frontend Monitoring (if metrics endpoint exists)
  - job_name: 'frontend'
    static_configs:
      - targets: ['frontend:3000']
    metrics_path: '/metrics'
    scrape_interval: 30s
    scrape_timeout: 10s
