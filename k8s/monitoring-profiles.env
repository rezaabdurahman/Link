# Kubernetes Monitoring Profile Configuration
# Environment variables for dynamic monitoring stack configuration

# ===== PROFILE SELECTION =====
MONITORING_PROFILE=standard

# ===== MINIMAL PROFILE =====
# Core monitoring only - 70% cost reduction
# For: Development, cost-sensitive environments
MINIMAL_PROMETHEUS_STORAGE=10Gi
MINIMAL_PROMETHEUS_RETENTION=3d
MINIMAL_PROMETHEUS_MEMORY=1Gi
MINIMAL_PROMETHEUS_CPU=250m
MINIMAL_PROMETHEUS_MEMORY_LIMIT=2Gi
MINIMAL_PROMETHEUS_CPU_LIMIT=500m
MINIMAL_GRAFANA_STORAGE=5Gi
MINIMAL_GRAFANA_MEMORY=256Mi
MINIMAL_GRAFANA_CPU=100m
MINIMAL_GRAFANA_MEMORY_LIMIT=512Mi
MINIMAL_GRAFANA_CPU_LIMIT=250m
# Loki and Jaeger disabled in minimal

# ===== STANDARD PROFILE =====
# Balanced monitoring - 40% cost reduction
# For: Staging, production with budget constraints
STANDARD_PROMETHEUS_STORAGE=20Gi
STANDARD_PROMETHEUS_RETENTION=7d
STANDARD_PROMETHEUS_MEMORY=2Gi
STANDARD_PROMETHEUS_CPU=500m
STANDARD_PROMETHEUS_MEMORY_LIMIT=4Gi
STANDARD_PROMETHEUS_CPU_LIMIT=1000m
STANDARD_GRAFANA_STORAGE=10Gi
STANDARD_GRAFANA_MEMORY=512Mi
STANDARD_GRAFANA_CPU=250m
STANDARD_GRAFANA_MEMORY_LIMIT=1Gi
STANDARD_GRAFANA_CPU_LIMIT=500m
STANDARD_LOKI_STORAGE=30Gi
STANDARD_LOKI_RETENTION=72h
STANDARD_LOKI_MEMORY=1Gi
STANDARD_LOKI_CPU=500m
STANDARD_LOKI_MEMORY_LIMIT=2Gi
STANDARD_LOKI_CPU_LIMIT=1000m
STANDARD_LOKI_INGESTION_RATE=8
STANDARD_LOKI_BURST_SIZE=12
STANDARD_JAEGER_STORAGE=20Gi
STANDARD_JAEGER_ES_MEMORY=1Gi
STANDARD_JAEGER_ES_CPU=500m
STANDARD_JAEGER_ES_MEMORY_LIMIT=2Gi
STANDARD_JAEGER_ES_CPU_LIMIT=1000m

# ===== FULL PROFILE =====
# Complete observability - current configuration optimized
# For: Production debugging, comprehensive monitoring
FULL_PROMETHEUS_STORAGE=50Gi
FULL_PROMETHEUS_RETENTION=14d  # Reduced from 30d
FULL_PROMETHEUS_MEMORY=4Gi
FULL_PROMETHEUS_CPU=1000m
FULL_PROMETHEUS_MEMORY_LIMIT=8Gi
FULL_PROMETHEUS_CPU_LIMIT=2000m
FULL_GRAFANA_STORAGE=15Gi
FULL_GRAFANA_MEMORY=1Gi
FULL_GRAFANA_CPU=500m
FULL_GRAFANA_MEMORY_LIMIT=2Gi
FULL_GRAFANA_CPU_LIMIT=1000m
FULL_LOKI_STORAGE=100Gi
FULL_LOKI_RETENTION=120h  # 5 days, reduced from 7d
FULL_LOKI_MEMORY=2Gi
FULL_LOKI_CPU=1000m
FULL_LOKI_MEMORY_LIMIT=4Gi
FULL_LOKI_CPU_LIMIT=2000m
FULL_LOKI_INGESTION_RATE=16
FULL_LOKI_BURST_SIZE=24
FULL_JAEGER_STORAGE=30Gi
FULL_JAEGER_ES_MEMORY=2Gi
FULL_JAEGER_ES_CPU=1000m
FULL_JAEGER_ES_MEMORY_LIMIT=4Gi
FULL_JAEGER_ES_CPU_LIMIT=2000m

# ===== COMPONENT ENABLEMENT FLAGS =====
# These control which monitoring apps are deployed
PROMETHEUS_ENABLED=true      # Always enabled
GRAFANA_ENABLED=true         # Always enabled
LOKI_ENABLED=true           # Disabled in minimal
JAEGER_ENABLED=true         # Disabled in minimal
CUSTOM_DASHBOARDS_ENABLED=true
ALERT_RULES_ENABLED=true

# ===== GRAFANA CONFIGURATION =====
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123  # Change in production

# ===== CURRENT ACTIVE SETTINGS =====
# These will be dynamically set based on MONITORING_PROFILE
PROMETHEUS_STORAGE=${STANDARD_PROMETHEUS_STORAGE}
PROMETHEUS_RETENTION=${STANDARD_PROMETHEUS_RETENTION}
PROMETHEUS_MEMORY=${STANDARD_PROMETHEUS_MEMORY}
PROMETHEUS_CPU=${STANDARD_PROMETHEUS_CPU}
PROMETHEUS_MEMORY_LIMIT=${STANDARD_PROMETHEUS_MEMORY_LIMIT}
PROMETHEUS_CPU_LIMIT=${STANDARD_PROMETHEUS_CPU_LIMIT}
GRAFANA_STORAGE=${STANDARD_GRAFANA_STORAGE}
GRAFANA_MEMORY=${STANDARD_GRAFANA_MEMORY}
GRAFANA_CPU=${STANDARD_GRAFANA_CPU}
GRAFANA_MEMORY_LIMIT=${STANDARD_GRAFANA_MEMORY_LIMIT}
GRAFANA_CPU_LIMIT=${STANDARD_GRAFANA_CPU_LIMIT}
LOKI_STORAGE=${STANDARD_LOKI_STORAGE}
LOKI_RETENTION=${STANDARD_LOKI_RETENTION}
LOKI_MEMORY=${STANDARD_LOKI_MEMORY}
LOKI_CPU=${STANDARD_LOKI_CPU}
LOKI_MEMORY_LIMIT=${STANDARD_LOKI_MEMORY_LIMIT}
LOKI_CPU_LIMIT=${STANDARD_LOKI_CPU_LIMIT}
LOKI_INGESTION_RATE=${STANDARD_LOKI_INGESTION_RATE}
LOKI_BURST_SIZE=${STANDARD_LOKI_BURST_SIZE}
JAEGER_STORAGE=${STANDARD_JAEGER_STORAGE}
JAEGER_ES_MEMORY=${STANDARD_JAEGER_ES_MEMORY}
JAEGER_ES_CPU=${STANDARD_JAEGER_ES_CPU}
JAEGER_ES_MEMORY_LIMIT=${STANDARD_JAEGER_ES_MEMORY_LIMIT}
JAEGER_ES_CPU_LIMIT=${STANDARD_JAEGER_ES_CPU_LIMIT}