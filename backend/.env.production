# Backend Shared Infrastructure - Production Environment
# This file contains production infrastructure secrets
# Deploy via K8s secrets or environment variables

# Application Version
APP_VERSION=production

# Sentry Configuration (Production)
SENTRY_DSN=USE_K8S_SECRET_OR_AWS_SECRETS_MANAGER
SENTRY_ENVIRONMENT=production

# Database Configuration (Production)
POSTGRES_HOST=prod-postgres.cluster.local
POSTGRES_USER=link_prod_user
POSTGRES_PASSWORD=USE_K8S_SECRET_OR_AWS_SECRETS_MANAGER
DB_NAME=link_prod
DB_SSL_MODE=require

# Redis Configuration (Production)
REDIS_HOST=prod-redis.cluster.local
REDIS_PORT=6379
REDIS_PASSWORD=USE_K8S_SECRET_OR_AWS_SECRETS_MANAGER

# OpenAI Configuration (Production)
OPENAI_API_KEY=USE_K8S_SECRET_OR_AWS_SECRETS_MANAGER

# Service Authentication (Production)
SERVICE_AUTH_TOKEN=USE_K8S_SECRET_OR_AWS_SECRETS_MANAGER

# AWS Configuration (Production)
AWS_REGION=us-west-2
# Note: Use IAM roles in production, not access keys