# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=link_user
DB_PASSWORD=link_pass
DB_NAME=link_app
DB_SSLMODE=disable

# Embedding Provider Configuration
EMBEDDING_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Service Configuration
PORT=8080
ENVIRONMENT=development
SERVICE_AUTH_TOKEN=your-service-token-change-in-production

# Service URLs for indexing pipeline
DISCOVERY_SVC_URL=http://discovery-svc:8081
USER_SVC_URL=http://user-svc:8082

# Indexing Pipeline Configuration
INDEXING_CRON_INTERVAL_MINUTES=120
INDEXING_WORKER_POOL_SIZE=10
INDEXING_RATE_LIMIT_PER_SECOND=50
INDEXING_BATCH_SIZE=100
INDEXING_EMBEDDING_TTL_HOURS=2

# PRIVACY & SECURITY SAFEGUARDS
# Database encryption at rest (recommended: true for production)
DB_ENCRYPTION_ENABLED=true

# Rate limiting for search endpoint (requests per minute per user)
SEARCH_RATE_LIMIT_QPM=50

# Privacy enforcement - set to true to enforce visibility and availability checks
ENFORCE_PRIVACY_CHECKS=true
ENFORCE_AVAILABILITY_CHECKS=true

# Optional: Additional caching configuration
CACHE_TTL=300
