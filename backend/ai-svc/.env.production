# Production Environment Configuration
ENVIRONMENT=production
VERSION=latest
DOCKER_REGISTRY=your-registry.com/

# Sentry Configuration
SENTRY_DSN=USE_K8S_SECRET_OR_AWS_SECRETS_MANAGER
SENTRY_ENVIRONMENT=production

# Server Configuration
SERVER_PORT=8081
METRICS_PORT=9090

# Database Configuration
DB_NAME=ai_db_prod
DB_USER=ai_svc_prod
# DB_PASSWORD=use_secure_vault_for_production
DB_SSL_MODE=require
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379
# REDIS_PASSWORD=use_secure_vault_for_production
REDIS_DB=0
REDIS_MAX_MEMORY=1gb

# JWT Configuration
# JWT_SECRET=use_secure_vault_for_production
JWT_EXPIRES_IN=24h

# AI Service Configuration
AI_PROVIDER=openai
# AI_API_KEY=use_secure_vault_for_production
AI_MODEL=gpt-4
AI_MAX_TOKENS=2048
AI_TEMPERATURE=0.7
AI_TIMEOUT=30s
AI_MAX_RETRIES=3

# Chat Service Configuration
CHAT_SERVICE_URL=https://chat-api.linkchatsummary.com
CHAT_SERVICE_TIMEOUT=10s
CHAT_SERVICE_MAX_RETRIES=3
CHAT_SERVICE_RETRY_DELAY=100ms
CHAT_SERVICE_RETRY_BACKOFF=2.0
CHAT_SERVICE_CIRCUIT_BREAKER_ENABLED=true
CHAT_SERVICE_CIRCUIT_BREAKER_TIMEOUT=30s
CHAT_SERVICE_CIRCUIT_BREAKER_MAX_FAILS=5

# Logging Configuration
LOG_LEVEL=warn
LOG_FORMAT=json

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://linkchatsummary.com,https://app.linkchatsummary.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Accept,Authorization,Content-Type,X-CSRF-Token,X-User-ID,X-User-Email,X-User-Name

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_AI_REQUESTS_PER_MINUTE=15

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s

# Monitoring
ENABLE_METRICS=true
PROMETHEUS_PORT=9091
GRAFANA_PORT=3001
# GRAFANA_ADMIN_USER=use_secure_vault_for_production
# GRAFANA_ADMIN_PASSWORD=use_secure_vault_for_production

# Database Connection Pool
DB_MAX_OPEN_CONNS=100
DB_MAX_IDLE_CONNS=50
DB_CONN_MAX_LIFETIME=300s

# Additional PostgreSQL settings
POSTGRES_INITDB_ARGS=--auth-host=scram-sha-256 --auth-local=scram-sha-256 --encoding=UTF8 --locale=en_US.UTF-8
