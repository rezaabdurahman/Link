# Backend Shared Infrastructure - Staging Environment
# This file contains staging infrastructure secrets
# Deploy via K8s secrets or environment variables

# Application Version
APP_VERSION=staging

# Sentry Configuration (Staging)
SENTRY_DSN=USE_K8S_SECRET_OR_AWS_SECRETS_MANAGER
SENTRY_ENVIRONMENT=staging

# Database Configuration (Staging)
POSTGRES_HOST=staging-postgres.cluster.local
POSTGRES_USER=link_staging_user
POSTGRES_PASSWORD=USE_K8S_SECRET_OR_AWS_SECRETS_MANAGER
DB_NAME=link_staging
DB_SSL_MODE=require

# Redis Configuration (Staging)
REDIS_HOST=staging-redis.cluster.local
REDIS_PORT=6379
REDIS_PASSWORD=USE_K8S_SECRET_OR_AWS_SECRETS_MANAGER

# OpenAI Configuration (Staging)
OPENAI_API_KEY=USE_K8S_SECRET_OR_AWS_SECRETS_MANAGER

# Service Authentication (Staging)
SERVICE_AUTH_TOKEN=USE_K8S_SECRET_OR_AWS_SECRETS_MANAGER

# AWS Configuration (Staging)
AWS_REGION=us-west-2
# Note: Use IAM roles in staging, not access keys