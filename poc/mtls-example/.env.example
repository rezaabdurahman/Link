# mTLS Example Environment Configuration
# Copy this file to .env and modify values as needed
# 
# IMPORTANT: Never commit .env files containing real secrets!

# =============================================================================
# mTLS Configuration
# =============================================================================

# Enable or disable mTLS functionality
USE_MTLS=true

# Certificate directory path (relative to docker-compose.yml)
CERTS_DIR=./certs

# Service URLs
SERVICE_URL=https://service:8443
GATEWAY_URL=http://localhost:8080

# =============================================================================
# TLS Configuration  
# =============================================================================

# Minimum TLS version (1.2 or 1.3)
TLS_MIN_VERSION=1.2

# Client certificate authentication mode
# Options: none, request, require, verify
TLS_CLIENT_AUTH=require

# Certificate file paths (inside containers)
TLS_CERT_PATH=/certs/service.crt
TLS_KEY_PATH=/certs/service.key
CA_BUNDLE_PATH=/certs/ca-bundle.crt

# =============================================================================
# Application Configuration
# =============================================================================

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# Server ports
SERVER_PORT=8443
GATEWAY_PORT=8080

# Health check configuration
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_RETRIES=3

# =============================================================================
# Docker Configuration
# =============================================================================

# Docker network name
DOCKER_NETWORK=mtls-network

# Container names
GATEWAY_CONTAINER=mtls-gateway
SERVICE_CONTAINER=mtls-service

# Docker Compose project name
COMPOSE_PROJECT_NAME=mtls-example

# =============================================================================
# Development Configuration
# =============================================================================

# Development mode (enables debug logging and additional endpoints)
# DEV_MODE=false

# Local certificate generation
# CERT_TOOL=openssl  # or 'cfssl'

# Test configuration
# TEST_TIMEOUT=60s
# TEST_VERBOSE=false

# =============================================================================
# Security Notes
# =============================================================================

# 1. This is a SAMPLE configuration file
# 2. Copy to .env and modify for your environment  
# 3. Never commit .env files with real secrets
# 4. Use strong certificates in production
# 5. Rotate certificates regularly
