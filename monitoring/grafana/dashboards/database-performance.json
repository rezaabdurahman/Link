{
  "dashboard": {
    "id": null,
    "uid": "database-performance",
    "title": "Database Performance Dashboard",
    "description": "Comprehensive database performance monitoring across all Link services",
    "tags": ["database", "performance", "monitoring", "link-app"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 0,
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "label": "Service",
          "datasource": "prometheus",
          "query": "label_values(database_queries_total, service)",
          "multi": true,
          "includeAll": true,
          "current": {
            "text": "All",
            "value": "$__all"
          },
          "refresh": 1
        },
        {
          "name": "table",
          "type": "query",
          "label": "Table",
          "datasource": "prometheus",
          "query": "label_values(database_queries_total{service=~\"$service\"}, table)",
          "multi": true,
          "includeAll": true,
          "current": {
            "text": "All",
            "value": "$__all"
          },
          "refresh": 1
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Database Overview",
        "type": "row",
        "collapsed": false,
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Query Rate by Service (QPS)",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 1
        },
        "targets": [
          {
            "expr": "sum by (service) (rate(database_queries_total{service=~\"$service\"}[5m]))",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "min": 0
          }
        }
      },
      {
        "id": 3,
        "title": "Connection Pool Usage",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 18,
          "x": 6,
          "y": 1
        },
        "targets": [
          {
            "expr": "(database_pool_used_connections{service=~\"$service\"} / (database_pool_used_connections{service=~\"$service\"} + database_pool_idle_connections{service=~\"$service\"})) * 100",
            "legendFormat": "{{service}} Pool Usage %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 4,
        "title": "Available Connections",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 5
        },
        "targets": [
          {
            "expr": "database_pool_idle_connections{service=~\"$service\"}",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 5
                },
                {
                  "color": "green",
                  "value": 10
                }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Query Performance",
        "type": "row",
        "collapsed": false,
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 9
        }
      },
      {
        "id": 6,
        "title": "Query Duration Percentiles",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 10
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(database_query_duration_seconds_bucket{service=~\"$service\"}[5m]))",
            "legendFormat": "P50 - {{service}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(database_query_duration_seconds_bucket{service=~\"$service\"}[5m]))",
            "legendFormat": "P95 - {{service}}",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(database_query_duration_seconds_bucket{service=~\"$service\"}[5m]))",
            "legendFormat": "P99 - {{service}}",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0
          }
        }
      },
      {
        "id": 7,
        "title": "Slow Query Rate",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 10
        },
        "targets": [
          {
            "expr": "rate(database_slow_queries_total{service=~\"$service\", table=~\"$table\"}[5m])",
            "legendFormat": "{{service}} - {{table}} ({{operation}})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "min": 0
          }
        }
      },
      {
        "id": 8,
        "title": "Error Analysis",
        "type": "row",
        "collapsed": false,
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 18
        }
      },
      {
        "id": 9,
        "title": "Database Error Rate by Type",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 19
        },
        "targets": [
          {
            "expr": "rate(database_query_errors_total{service=~\"$service\", table=~\"$table\"}[5m])",
            "legendFormat": "{{service}} - {{error_type}} ({{table}})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "min": 0
          }
        }
      },
      {
        "id": 10,
        "title": "Error Distribution by Type",
        "type": "piechart",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 19
        },
        "targets": [
          {
            "expr": "sum by (error_type) (rate(database_query_errors_total{service=~\"$service\"}[5m]))",
            "legendFormat": "{{error_type}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 11,
        "title": "Service-Specific Performance",
        "type": "row",
        "collapsed": false,
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 27
        }
      },
      {
        "id": 12,
        "title": "Chat Service - Real-time Performance",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 28
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(database_query_duration_seconds_bucket{service=\"chat-svc\"}[5m]))",
            "legendFormat": "Chat P95 Latency",
            "refId": "A"
          },
          {
            "expr": "rate(database_slow_queries_total{service=\"chat-svc\"}[5m])",
            "legendFormat": "Chat Slow Queries/sec",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Chat Slow Queries/sec"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "reqps"
                }
              ]
            }
          ]
        }
      },
      {
        "id": 13,
        "title": "Search Service - Vector Queries",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 28
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(database_query_duration_seconds_bucket{service=\"search-svc\"}[5m]))",
            "legendFormat": "Vector Query P95",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0
          }
        }
      },
      {
        "id": 14,
        "title": "Location Service - PostGIS Performance",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 28
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(database_query_duration_seconds_bucket{service=\"location-svc\"}[5m]))",
            "legendFormat": "PostGIS P95",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0
          }
        }
      },
      {
        "id": 15,
        "title": "SLO Monitoring",
        "type": "row",
        "collapsed": false,
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 36
        }
      },
      {
        "id": 16,
        "title": "Database Availability SLO",
        "type": "gauge",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 37
        },
        "targets": [
          {
            "expr": "(rate(database_queries_total{status=\"success\", service=~\"$service\"}[30m]) / rate(database_queries_total{service=~\"$service\"}[30m])) * 100",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 95,
            "max": 100,
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 95
                },
                {
                  "color": "yellow",
                  "value": 99
                },
                {
                  "color": "green",
                  "value": 99.9
                }
              ]
            }
          }
        }
      },
      {
        "id": 17,
        "title": "Database Latency SLO (P99)",
        "type": "gauge",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 37
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(database_query_duration_seconds_bucket{service=~\"$service\"}[30m])) * 1000",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "min": 0,
            "max": 200,
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "red",
                  "value": 100
                }
              ]
            }
          }
        }
      },
      {
        "id": 18,
        "title": "Success Rate Trend",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 37
        },
        "targets": [
          {
            "expr": "(rate(database_queries_total{status=\"success\", service=~\"$service\"}[5m]) / rate(database_queries_total{service=~\"$service\"}[5m])) * 100",
            "legendFormat": "{{service}} Success Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 95,
            "max": 100,
            "thresholds": {
              "mode": "line",
              "steps": [
                {
                  "color": "red",
                  "value": 99.9
                }
              ]
            }
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "version": 2
  }
}
