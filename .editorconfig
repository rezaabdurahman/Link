# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 4 space indentation
[*.{py,go,js,ts,jsx,tsx,json,yaml,yml}]
indent_style = space
indent_size = 4

# 2 space indentation for specific files
[*.{md,html,css,scss,less}]
indent_style = space
indent_size = 2

# Tab indentation (overrides above)
[{Makefile,*.mk}]
indent_style = tab

# Specific settings for Go files
[*.go]
indent_style = tab
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Docker files
[{Dockerfile,*.dockerfile}]
indent_style = space
indent_size = 4

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 4
